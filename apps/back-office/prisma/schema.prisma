generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Coworking {
  id              String  @id @default(uuid()) @db.Uuid
  name            String  @unique
  description     String
  location        String
  price_for_day   Decimal @db.Decimal(10, 2)
  price_for_month Decimal @db.Decimal(10, 2)
  isFrozen        Boolean @default(false)
  Spot            Spot[]
}

model Spot {
  id           String    @id @default(uuid()) @db.Uuid
  spot_number  Int
  coworking_id String    @db.Uuid
  coworking    Coworking @relation(fields: [coworking_id], references: [id])
}
